#!/usr/bin/env python3
"""
KiCad Analyzer - CLI entry point script.

This is the main executable script that launches the KiCad Analyzer CLI.
"""

import sys
from pathlib import Path

# Add the scripts directory to Python path
scripts_dir = Path(__file__).parent
sys.path.insert(0, str(scripts_dir))

from kicad_analyzer.cli import main

if __name__ == "__main__":
    main()
